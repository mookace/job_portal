<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container" style="display: flex; justify-content: end">
        <div>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/admin/homepage"
                >Post Jobs</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/admin/alljobs"
                >Jobs Details</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/admin/allusers"
                >All Users</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/api/admin/logout"
                >Logut</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Alert message -->
    <% if(Errmsg.length>0){%>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong><%=Errmsg%></strong>
    </div>
    <%}%>
    <!-- Success message -->
    <% if(message.length>0){%>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong><%=message%></strong>
    </div>
    <%}%>

    <!-- All Data -->
    <div class="container">
      <h1 class="mt-5 mb-5 text-center text-primary"><b>Profile Update</b></h1>
      <div class="row mt-5">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">Profile Update</div>
            <div class="card-body">
              <form
                action="<%= '/api/admin/updateprofile?updateid=' + userData.id %>"
                method="post"
              >
                <div class="mb-3">
                  <label for="text">Email</label>
                  <input
                    type="text"
                    name="email"
                    class="form-control"
                    value="<%=userData.email%>"
                    readonly
                  />
                </div>
                <%if(userData.fullname){%>
                <!-- fullname -->
                <div class="mb-3">
                  <label for="text">Fullname</label>
                  <input
                    type="text"
                    name="fullname"
                    class="form-control"
                    value="<%=userData.fullname%>"
                    required
                  />
                </div>
                <%}else{%>
                <div class="mb-3">
                  <label for="text">Fullname</label>
                  <input
                    type="text"
                    name="fullname"
                    class="form-control"
                    required
                  />
                </div>
                <%}%>
                <!-- role -->
                <%if(userData.role){%>
                <div class="mb-3">
                  <label for="text">role</label>
                  <select name="role" class="form-control" required>
                    <option value="<%=userData.role%>">
                      <%=userData.role%>
                    </option>
                    <option value="users">users</option>
                    <option value="admin">admin</option>
                  </select>
                </div>
                <%}else{%>
                <div class="mb-3">
                  <label for="text">role</label>
                  <input
                    type="text"
                    name="role"
                    class="form-control"
                    required
                  />
                </div>
                <%}%>

                <div class="mb-3">
                  <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

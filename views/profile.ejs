<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- NavBar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container" style="display: flex; justify-content: end">
        <div>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/front/homepage"
                >All Jobs</a
              >
            </li>

            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/api/user/logout"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- All Data -->
    <div class="container">
      <h1 class="mt-5 mb-5 text-center text-primary"><b>Profile Update</b></h1>
      <div class="row mt-5">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">Profile Update</div>
            <div class="card-body">
              <form
                action="/api/user/profile"
                method="post"
                enctype="multipart/form-data"
              >
                <%if(userData){%>
                <div class="mb-3">
                  <label for="text">Email</label>
                  <input
                    type="text"
                    name="email"
                    class="form-control"
                    value="<%=userData.email%>"
                    readonly
                  />
                </div>
                <%}%>
                <!-- Form Data -->
                <%if(userData){%>
                <div class="mb-3">
                  <label for="text">Fullname</label>
                  <input
                    type="text"
                    name="fullname"
                    class="form-control"
                    value="<%=userData.fullname%>"
                    required
                  />
                </div>
                <%}else{%>
                <div class="mb-3">
                  <label for="text">Fullname</label>
                  <input
                    type="text"
                    name="fullname"
                    class="form-control"
                    required
                  />
                </div>
                <%}%>

                <div class="mb-3">
                  <label class="form-label" for="cv">Upload cv</label>
                  <input type="file" class="form-control" name="cv" required />
                </div>

                <div class="mb-3">
                  <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
              </form>
            </div>
            <div class="card-footer">
              <h2>
                <a
                  href="<%= '/api/user/changepassword?id=' + userData.id %>"
                  class="btn btn-success"
                >
                  Change Password
                </a>
              </h2>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
      integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
